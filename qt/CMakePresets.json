{
    "version": 3,
    "cmakeMinimumRequired": { "major": 3, "minor": 22 },
    "configurePresets": [
        {
            "name": "windows-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "EXECUTE_PROTOCOL_REGISTRATION": true,
                "PYTHON_NAME_SUFFIX": "3.13",
                "BUILD_AS_WINDOWED_APP":  true
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows-debug",
            "displayName": "Windows Debug",
            "inherits": "windows-base",
            "installDir": "${sourceDir}/Windows/Debug",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_PREFIX_PATH": "${sourceDir}/Windows/Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/Windows/Debug"
            }
        },
        {
            "name": "windows-release",
            "displayName": "Windows Release",
            "inherits": "windows-debug",
            "installDir": "${sourceDir}/Windows/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_PREFIX_PATH": "${sourceDir}/Windows/Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/Windows/Release"
            }
        },
        {
            "name": "linux-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "PYTHON_NAME_SUFFIX": "3",
                "BUILD_AS_WINDOWED_APP":  false
            }
        },
        {
            "name": "linux-debug",
            "displayName": "Linux Debug",
            "inherits": "linux-base",
            "installDir": "${sourceDir}/Linux/Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_PREFIX_PATH": "${sourceDir}/Linux/Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/Linux/Debug"
            }
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release",
            "inherits": "linux-debug",
            "installDir": "${sourceDir}/Linux/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_PREFIX_PATH": "${sourceDir}/Linux/Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/Linux/Release"
            }
        }
    ]
}
